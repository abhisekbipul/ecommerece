@model List<Product>


<a asp-controller="Dashboard" asp-action="AddProduct"><input type="submit" value="Add Product" class="btn btn-info" /></a>
<br />
<br />
<input type="button" value="Low to high" class="btn btn-secondary" id="LTHbtn"/>
<br />
<form method="post">
    <select name="choice">
        <option>All</option>
        <option>LTH</option>
    </select>
    <input  type="submit" value="Filter"/>
</form>
<br />
<div class="d-flex">
    @foreach (var d in Model)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" height="200" width="200" src="@d.Picture" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@d.Pname</h5>
                
            </div>
        
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Category : @d.Pcat</li>
                <li class="list-group-item">Price : @d.Price</li>
               
            </ul>

            <div class="card-body">
                <a asp-controller="Dashboard" asp-route-id="@d.Pid" asp-action="AddToCart" class="btn btn-sm btn-warning">Add to Cart</a>

            </div>
            
        </div>
    }
</div>

